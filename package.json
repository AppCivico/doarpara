{
  "name": "DoarPara",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "dev:remote": "nuxt dev --remote",
    "generate": "nuxt generate",
    "preview": "NODE_OPTIONS='--import ./public/instrument.server.mjs' nuxt preview",
    "start": "node --import .output/public/instrument.server.mjs .output/server/index.mjs",
    "postinstall": "nuxt prepare",
    "deploy": "npx nuxthub deploy",
    "deploy:prod": "npx nuxthub deploy --production",
    "lint:js": "eslint --ext \".ts,.vue\" --ignore-path .gitignore .",
    "lint:css": "stylelint assets/scss/**/*.{vue,scss} --fix",
    "lint": "npx lint:js && npx lint:css && npx lint:prettier",
    "lintAndFix": "npx lint:js --fix && npx lint:css --fix",
    "tail:prod": "wrangler pages deployment tail --project-name=doarpara",
    "tail:preview": "wrangler pages deployment tail --project-name=doarpara --environment=preview",
    "test": "vitest run"
  },
  "devDependencies": {
    "@nuxt/devtools": "latest",
    "@nuxthub/core": "^0.10.1",
    "@nuxtjs/i18n": "^9.5.6",
    "@nuxtjs/mdc": "^0.17.0",
    "@pinia-plugin-persistedstate/nuxt": "^1.2.1",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "@vue/cli-service": "^5.0.8",
    "@vue/eslint-config-airbnb-with-typescript": "^8.0.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-vue": "^9.33.0",
    "husky": "^9.1.7",
    "nuxt": "^3.17.6",
    "nuxt-gtag": "^3.0.3",
    "postcss-html": "^1.8.0",
    "sass": "^1.89.2",
    "sassdoc": "^2.7.4",
    "sassdoc-theme-herman": "^6.0.2",
    "stylelint": "^16.21.0",
    "stylelint-config-recess-order": "^7.1.0",
    "stylelint-config-recommended-scss": "^15.0.1",
    "stylelint-config-recommended-vue": "^1.6.1",
    "stylelint-config-sass-guidelines": "^12.1.0",
    "stylelint-scss": "^6.12.1",
    "stylelint-selector-bem-pattern": "^4.0.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^3.0.1",
    "wrangler": "^4.54.0"
  },
  "dependencies": {
    "@pinia/nuxt": "^0.5.1",
    "@sentry/nuxt": "^9.34.0",
    "maska": "^3.2.0",
    "sass-apca": "^1.1.1",
    "vue-i18n": "^11.1.8"
  }
}
